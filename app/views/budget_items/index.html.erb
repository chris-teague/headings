<p id="notice"><%= notice %></p>

<h1>Listing Budget Items</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Project</th>
      <th>Development metres</th>
      <th>Rehab metres</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= budget_item.date %></td>
        <td><%= budget_item.project_id %></td>
        <td><%= budget_item.development_metres %></td>
        <td><%= budget_item.rehab_metres %></td>
        <td><%= link_to 'Show', budget_item %></td>
        <td><%= link_to 'Edit', edit_budget_item_path(budget_item) %></td>
        <td><%= link_to 'Destroy', budget_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

