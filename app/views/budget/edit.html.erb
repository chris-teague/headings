<%= render '/projects/side_menu', project: @project %>
<%= content_for(:page_title, "Editing #{@project.name} Budget") %>

<div class="col-sm-12 col-md-12">
  <div class="panel panel-lined table-responsive panel-hovered mb20 data-table">

    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">

      <%= simple_form_for(:budget, url: project_budget_path(@project), class: 'form-horizontal') do |f| %>
        <table class="table table-bordered table-striped dataTable no-footer">
          <thead>
            <tr>
              <th>Date</th>
              <th>Development Meters</th>
              <th>Rehab Meters</th>
            </tr>
          </thead>
          <tbody>
          <% @project.sorted_budget_items.each do |budget_item| %>
            <tr>
              <td><%= budget_item %></td>
              <td><input name="budget_item[<%= budget_item.id %>][development_metres]" type='text' value='<%= budget_item.development_metres %>' /></td>
              <td><input name="budget_item[<%= budget_item.id %>][rehab_metres]" type='text' value='<%= budget_item.rehab_metres %>' /></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%= f.button :submit %>

      <% end %>

      <br />
      <%= link_to '<< Back', project_path(@project) %>

    </div>

  </div>
</div>


